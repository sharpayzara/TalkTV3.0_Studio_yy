<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
    
    <Button 
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_normal_white_pressed"
        android:text="+ 添加影片"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_add_program"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"/>
    
    <TextView 
        android:id="@+id/my_upload_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="我的上传"
        android:textColor="@color/light_black"
        android:layout_below="@id/add"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>
    
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/upload_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_upload_text"
        android:layout_marginTop="5dp"
        android:dividerHeight="5dp"
        android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/upload_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_upload_text"
        android:layout_marginTop="5dp"
        android:dividerHeight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="赶快添加影片吧"/>
    <LinearLayout 
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:background="#99000000"
        android:visibility="gone">
        <TextView 
            android:id="@+id/select_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="全选"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"/>
        <TextView 
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="删除"
            android:layout_weight="1"
            android:textColor="@color/navigator_bg_color"
            android:gravity="center"
            android:textSize="15sp"/>
    </LinearLayout>
    
    <include 
        layout="@layout/loading_layout"/>

</RelativeLayout>