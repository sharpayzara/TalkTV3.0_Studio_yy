<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dip"
        android:background="@drawable/gua_gua_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/tip_drawable_bottom"
            android:gravity="left|top"
            android:text="@string/gua_tip"
            android:textColor="#782c01"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/gua_layout"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dip" >

            <RelativeLayout
                android:id="@+id/errLayout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:clickable="true" >

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/base_large_progressbar_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/err_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/err_tip"
                    android:textColor="@color/errtextcolor"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gua_layout_re"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:visibility="gone" >

                <com.sumavision.talktv2.widget.EraserView
                    android:id="@+id/eraserView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/eraserLay"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="100dip" >

                <ImageView
                    android:id="@+id/eraserLay_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="center" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:src="@drawable/gua_open" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_no_chance"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/gua_gua_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:visibility="gone"
        tools:visibility="visible" >

        <TextView
            android:id="@+id/tv_no_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/gua_no_chance_title"
            android:textColor="#782c01"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_no_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/gua_no_chance_tip"
            android:textColor="#782c01"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/gua_gift" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:gravity="left"
        android:text="@string/gua_tips"
        android:textColor="#782c01"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/gua_gift" />

    <RelativeLayout
        android:id="@+id/replaylayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="253dip"
            android:layout_height="166dip"
            android:layout_centerInParent="true"
            android:background="#ffffff"
            android:paddingBottom="10dip" >

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shake_top" >

                <ImageView
                    android:id="@+id/cancel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:background="@drawable/shake_close"
                    android:contentDescription="@string/app_name" />
            </FrameLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frame"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dip"
                android:gravity="center"
                android:text="@string/get_an_chance"
                android:textColor="#444444"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:padding="8dip" >

                <Button
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="32dip"
                    android:layout_marginRight="12dip"
                    android:background="@drawable/activity_btn"
                    android:text="@string/no_need"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/back"
                    android:layout_width="0dip"
                    android:layout_height="32dip"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/activity_btn"
                    android:text="@string/share_immediately"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/overlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="253dip"
            android:layout_height="166dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dip"
            android:background="#ffffff"
            android:paddingBottom="20dip" >

            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shake_top" >

                <ImageView
                    android:id="@+id/cancel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:background="@drawable/shake_close"
                    android:contentDescription="@string/app_name" />
            </FrameLayout>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frame1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dip"
                android:gravity="center"
                android:text="@string/gua_tip2"
                android:textColor="#444444"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:paddingBottom="5dip" >

                <Button
                    android:id="@+id/review2"
                    android:layout_width="wrap_content"
                    android:layout_height="32dip"
                    android:background="@drawable/activity_btn"
                    android:text="@string/no_need"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/back2"
                    android:layout_width="wrap_content"
                    android:layout_height="32dip"
                    android:background="@drawable/activity_btn"
                    android:text="@string/gua_tip3"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <include
        android:id="@+id/share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/share_layout"
        android:visibility="gone" />

</RelativeLayout>