<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/shopinfo_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/shop_big_marleft"
        android:layout_marginRight="@dimen/shop_big_marright"
        android:orientation="horizontal"
        android:paddingTop="@dimen/shop_big_padbottom"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/shop_left"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/shop_item_padleftright"
            android:paddingRight="@dimen/shop_item_padleftright" >

            <ImageView
                android:id="@+id/left_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/aadefault"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/shop_iv_pad"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignBottom="@id/left_iv"
                android:layout_margin="2dp"
                android:background="@drawable/rcmd_pic_title_layout_bg"
                android:paddingLeft="@dimen/shop_item_score_pad"
                android:paddingRight="@dimen/shop_item_score_pad" >

                <TextView
                    android:id="@+id/left_score_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/login_score"
                    android:drawablePadding="2dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="10积分"
                    android:textColor="@color/shop_item_score"
                    android:textSize="@dimen/shop_item_scoresize" />

                <TextView
                    android:id="@+id/left_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/left_score_txt"
                    android:ellipsize="end"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="九宫格抽大奖"
                    android:textColor="@color/shop_item_name"
                    android:textSize="@dimen/shop_item_namesize" />
            </RelativeLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/shop_right"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/shop_item_padleftright"
            android:paddingRight="@dimen/shop_item_padleftright" >

            <ImageView
                android:id="@+id/right_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/aadefault"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/shop_iv_pad"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignBottom="@id/right_iv"
                android:layout_margin="2dp"
                android:background="@drawable/rcmd_pic_title_layout_bg"
                android:paddingLeft="@dimen/shop_item_score_pad"
                android:paddingRight="@dimen/shop_item_score_pad" >

                <TextView
                    android:id="@+id/right_score_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/login_score"
                    android:drawablePadding="2dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="10积分"
                    android:textColor="@color/shop_item_score"
                    android:textSize="@dimen/shop_item_scoresize" />

                <TextView
                    android:id="@+id/right_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/right_score_txt"
                    android:ellipsize="end"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="九宫格抽大奖"
                    android:textColor="@color/shop_item_name"
                    android:textSize="@dimen/shop_item_namesize" />
            </RelativeLayout>
        </RelativeLayout>

        
    </LinearLayout>

</RelativeLayout>