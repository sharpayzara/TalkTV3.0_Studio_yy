<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mvad_layout"
    android:padding="10dp"
    android:visibility="gone"
    android:background="@color/white">
    <com.sumavision.talktv2.components.ResizableImageView
        android:id="@+id/mvad_img"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="165dp" />
    <TextView
        android:id="@+id/mvad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mvad_img"
        android:layout_toLeftOf="@+id/mvad_logo"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:text="aldkjfaldfjl"
        />
    <TextView
        android:id="@+id/mvad_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mvad_img"
        android:layout_alignParentRight="true"
        android:text="推广"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@color/blue_ad_bg"
        />

</RelativeLayout>