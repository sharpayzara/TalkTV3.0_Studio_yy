<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp">
    
    <RelativeLayout 
        android:id="@+id/pdhr_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/pdhr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@color/light_black"
            android:text="喜欢这部视频的人也喜欢"/>
        <TextView 
            android:id="@+id/pdhr_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/light_black"
            android:text="共xx条推荐"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <com.sumavision.talktv2.components.StaticGridView
        android:id="@+id/pdhr_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:listSelector="@color/transparent"
        android:numColumns="2"
        android:visibility="gone"/>
    
    <Button 
        android:id="@+id/pdhr_more"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="更多"
        android:background="@drawable/button_normal_bg"
        android:textColor="@color/light_black"
        android:textSize="12sp"
        android:layout_marginTop="10dp"/>
</LinearLayout>