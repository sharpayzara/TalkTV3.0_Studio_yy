<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  android:fitsSystemWindows="true"
    android:background="@drawable/bg_default" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/mc_tip_style"
                android:layout_marginLeft="10dip"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/myaccountbalance" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/lr_pt_item_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/totalcredits"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tcredits"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/exchange_icon"
                        android:drawablePadding="10dp"
                        android:textColor="@color/userinfo_point" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/earn_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/earn_score_title"
                            android:textColor="#E72722" />

                        <TextView
                            android:id="@+id/hyue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/helpgrey" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/totalcoins"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/coins"
                        android:drawablePadding="10dp"
                        android:textColor="@color/yellow" />

                    <TextView
                        android:id="@+id/query_coin"
                        android:layout_width="36dp"
                        android:layout_height="24dp"
                        android:background="@drawable/btn_confirm_bg"
                        android:gravity="center"
                        android:text="查询"
                        android:textColor="@color/btn_search_text" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" >

                        <TextView
                            android:id="@+id/hdiam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/helpgrey" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/totaldiamond"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tdiamond"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/diamond"
                        android:drawablePadding="10dp"
                        android:textColor="@color/userinfo_diamond" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" >

                        <TextView
                            android:id="@+id/hcredits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/helpgrey" />
                    </LinearLayout>
                </LinearLayout>
                <!-- 购买钻石 -->

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/mc_tip_style"
                        android:text="@string/buydiamond" />

                    <TextView
                        android:id="@+id/payhistroy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/pay_history"
                        android:drawablePadding="10dp"
                        android:text="@string/rechargehistory"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lr_pt_item_line"
                    android:contentDescription="@string/app_name" />

                <ListView
                    android:id="@+id/diamondlist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent" >
                </ListView>
                <!-- 兑换积分 -->

                <TextView
                    style="@style/mc_tip_style"
                    android:text="@string/exchangecredits" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/lr_pt_item_line"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/diamondnum"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="4"
                        android:background="@drawable/account_exchange_edt"
                        android:drawableRight="@drawable/diamond"
                        android:inputType="number"
                        android:maxEms="3"
                        android:maxLength="4"
                        android:paddingLeft="5dp"
                        android:text="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:text="@string/exchange" />

                    <EditText
                        android:id="@+id/creditnum"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="4"
                        android:background="@drawable/account_edt_disable"
                        android:clickable="false"
                        android:drawableRight="@drawable/exchange_icon"
                        android:enabled="false"
                        android:inputType="number"
                        android:maxEms="5"
                        android:paddingLeft="5dp"
                        android:text="50" />

                    <TextView
                        android:id="@+id/mtoc"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:background="@drawable/btn_confirm_bg"
                        android:gravity="center"
                        android:text="@string/confirm"
                        android:textColor="@color/btn_search_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exchange_coin_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/mc_tip_style"
                            android:text="@string/exchangecoins" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/coin_subtitle"
                            android:textColor="#E72722"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/lr_pt_item_line"
                        android:contentDescription="@string/app_name" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/coin_diamond_num"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="4"
                            android:background="@drawable/account_exchange_edt"
                            android:drawableRight="@drawable/diamond"
                            android:inputType="number"
                            android:maxEms="3"
                            android:maxLength="3"
                            android:paddingLeft="5dp"
                            android:text="1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:text="@string/exchange" />

                        <EditText
                            android:id="@+id/coin_num"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="4"
                            android:background="@drawable/account_edt_disable"
                            android:clickable="false"
                            android:drawablePadding="3dp"
                            android:drawableRight="@drawable/coins"
                            android:enabled="false"
                            android:inputType="number"
                            android:maxEms="6"
                            android:paddingLeft="5dp"
                            android:text="500" />

                        <TextView
                            android:id="@+id/tv_exchange_coin"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="2"
                            android:background="@drawable/btn_confirm_bg"
                            android:gravity="center"
                            android:text="@string/confirm"
                            android:textColor="@color/btn_search_text"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/base_large_progressbar_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>