<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default"
    android:fitsSystemWindows="true" >
    
    <RelativeLayout 
        android:id="@+id/announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="-13dp"
        android:visibility="gone">
        <TextView 
            android:id="@+id/announcement_txt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/navigator_bg_color"
            android:text="公告："/>
        <com.sumavision.talktv2.components.MarqueeTextView
            android:id="@+id/marquee_text"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/announcement_txt"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:layout_below="@id/announcement"
        android:overScrollMode="always"
        android:scrollbars="none"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/rlayout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/light_black" />

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    layout="@layout/include_max_focus_layout" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlayout_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlayout_top"
                android:layout_marginTop="12dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/iv_desc_tip"
                    android:layout_width="8dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="6dp"
                    android:contentDescription="@string/app_name"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:src="@color/navigator_bg_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/iv_desc_tip"
                    android:gravity="center_vertical"
                    android:text="@string/activity_flow"
                    android:textColor="@color/light_black" />

                <Button
                    android:id="@+id/btn_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/btn_cache_bg"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="@string/my_gift"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rlayout_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlayout_desc"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <RelativeLayout
                    android:id="@+id/rlayout_play"
                    android:layout_width="@dimen/activity_join"
                    android:layout_height="@dimen/activity_join" >

                    <ImageView
                        android:id="@+id/imgv_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/activity_play_bg" />

                    <TextView
                        android:id="@+id/tv_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/activity_play"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/activity_arrow" />

                <RelativeLayout
                    android:id="@+id/rlayout_lottery"
                    android:layout_width="@dimen/activity_join"
                    android:layout_height="@dimen/activity_join"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/imgv_lottery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/activity_lottery_bg" />

                    <TextView
                        android:id="@+id/tv_lottery_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:text="@string/activity_lottery"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/rlayou_arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/activity_arrow"
                    tools:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/rlayout_share"
                    android:layout_width="@dimen/activity_join"
                    android:layout_height="@dimen/activity_join"
                    android:clickable="true"
                    tools:visibility="gone">

                    <ImageView
                        android:id="@+id/imgv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/activity_share_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/activity_share"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vip_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="vertical"
                android:layout_below="@+id/rlayout_middle">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/navigator_bg_color"
                    android:paddingTop="5dp"
                    android:paddingBottom="15dp"
                    android:text="VIP专属抽奖"/>
                <TextView
                    android:id="@+id/vip_award"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:textColor="@drawable/text_vip_award"
                    android:background="#E9573F"
                    android:text="VIP抽奖 +1"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/vip_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/vip_award"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="成为VIP，增加抽奖次数，加大抽奖中奖率"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlayout_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_layout"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/iv_rule_tip"
                    android:layout_width="8dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="6dp"
                    android:contentDescription="@string/app_name"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:src="@color/navigator_bg_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/iv_rule_tip"
                    android:gravity="center_vertical"
                    android:text="@string/activity_user_list"
                    android:textColor="@color/light_black" />
            </RelativeLayout>

            <com.sumavision.talktv2.components.StaticListView
                android:id="@+id/list_user"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rlayout_rule"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@android:color/transparent"
                android:listSelector="@android:color/transparent" />
        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/loading_layout" />

</RelativeLayout>