<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/wangyi_item_retxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/emergency_item_selecter"
        android:padding="10dip"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/item_iv"
                    android:layout_width="fill_parent"
                    android:layout_height="73dip"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="8dip"
                    android:background="@drawable/emergency_txt_bg_pic"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_txt_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="3dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="2dip"
                    android:text="0评论"
                    android:textColor="@color/emergency_detail_color"
                    android:textSize="@dimen/emergency_story_detail_txtsize" />

                <TextView
                    android:id="@+id/item_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/emergency_title_color"
                    android:textSize="@dimen/emergency_story_title_txtsize" />

                <TextView
                    android:id="@+id/item_txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_txt"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingBottom="2dip"
                    android:textColor="@color/emergency_detail_color"
                    android:textSize="@dimen/emergency_story_detail_txtsize" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wangyi_item_revideo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/emergency_item_selecter"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/item_video_iv"
                    android:layout_width="fill_parent"
                    android:layout_height="73dip"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="8dip"
                    android:background="@drawable/emergency_txt_bg_pic"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_weight="2" >

                <TextView
                    android:id="@+id/item_video_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/emergency_title_color"
                    android:textSize="@dimen/emergency_story_title_txtsize" />

                <TextView
                    android:id="@+id/item_video_txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_video_txt"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingBottom="2dip"
                    android:textColor="@color/emergency_detail_color"
                    android:textSize="@dimen/emergency_story_detail_txtsize" />

                <TextView
                    android:id="@+id/item_video_txt_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="3dip"
                    android:background="#4f85be"
                    android:paddingBottom="2dip"
                    android:textColor="@color/white"
                    android:textSize="@dimen/emergency_story_detail_txtsize" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wangyi_item_repic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_down_normal"
        android:padding="10dip"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/item_iv1_re"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/emergency_star_selecter"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_iv1"
                    android:layout_width="fill_parent"
                    android:layout_height="75dip"
                    android:layout_centerInParent="true"
                    android:layout_margin="3dip"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_iv2_re"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/emergency_star_selecter"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_iv2"
                    android:layout_width="fill_parent"
                    android:layout_height="75dip"
                    android:layout_centerInParent="true"
                    android:layout_margin="3dip"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_iv3_re"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/emergency_star_selecter"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_iv3"
                    android:layout_width="fill_parent"
                    android:layout_height="75dip"
                    android:layout_centerInParent="true"
                    android:layout_margin="3dip"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wangyi_item_repic1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/emergency_item_selecter"
        android:padding="10dip"
        android:visibility="gone" >

        <TextView
            android:id="@+id/wangyi_item_repic1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/emergency_title_color"
            android:textSize="@dimen/emergency_story_title_txtsize" />

        <LinearLayout
            android:id="@+id/wangyi_item_repic1_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wangyi_item_repic1_title"
            android:orientation="horizontal"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_iv11"
                    android:layout_width="fill_parent"
                    android:layout_height="75dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/emergency_iv_bg_pic"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_iv12"
                    android:layout_width="fill_parent"
                    android:layout_height="75dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/emergency_iv_bg_pic"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_iv13"
                    android:layout_width="fill_parent"
                    android:layout_height="75dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/emergency_iv_bg_pic"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/wangyi_item_repic1_ll"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/wangyi_item_repic1_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:textColor="@color/emergency_detail_color"
                android:textSize="@dimen/emergency_story_detail_txtsize" />

            <TextView
                android:id="@+id/wangyi_item_repic1_bottom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:textColor="@color/emergency_detail_color"
                android:textSize="@dimen/emergency_story_detail_txtsize" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>