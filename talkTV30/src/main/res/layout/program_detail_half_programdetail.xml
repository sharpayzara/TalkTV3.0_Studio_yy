<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    
    <RelativeLayout 
        android:id="@+id/pdhpd_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/pdhpd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@color/light_black"
            android:text="节目名称"/>
        <Button
            android:id="@+id/pdhpd_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/pdhpd_pic"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">
        <TextView 
            android:id="@+id/pdhpd_text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:text="text1:text1"
            android:layout_weight="1"/>
        <TextView 
            android:id="@+id/pdhpd_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:text="text2:text2"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">
        <TextView 
            android:id="@+id/pdhpd_text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:text="text3:text3"
            android:layout_weight="1"/>
        <TextView 
            android:id="@+id/pdhpd_text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:text="text4:text4"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="节目详情"
        android:textColor="@color/light_black"
        android:textSize="15sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/pdhpd_program_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="节目详情节目详情节目详情节目详情节目详情"
        android:textColor="@color/light_black"
        android:textSize="13sp"
        android:layout_marginTop="15dp"/>
</LinearLayout>