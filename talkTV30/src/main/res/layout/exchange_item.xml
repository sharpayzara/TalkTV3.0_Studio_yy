<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_default">

    <RelativeLayout
        android:id="@+id/layout_exchange_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/item_tip"
            android:layout_width="8dp"
            android:layout_height="36dp"
            android:layout_marginLeft="6dp"
            android:contentDescription="@string/app_name"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:src="@color/navigator_bg_color" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/item_tip"
            android:gravity="center_vertical"
            android:text="@string/exchange_rule"
            android:textColor="@color/light_black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_exchange_item"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:background="@null"
        android:paddingBottom="10dp"
        android:textColor="@color/light_black"
        android:paddingTop="10dp"
        android:singleLine="false" />

</RelativeLayout>