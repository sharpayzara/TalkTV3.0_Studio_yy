<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:background="#eeeeee">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee">

            <LinearLayout
                android:id="@+id/link_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="链接："
                    android:textColor="@color/light_black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/link_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="请输入影片链接"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/scan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/scan_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/name_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/link_input_layout"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="名称："
                    android:textColor="@color/light_black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="请输入影片名称"
                    android:maxLength="20"
                    android:layout_marginRight="50dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <com.sumavision.talktv2.components.FlowLayout
                android:id="@+id/flow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_input_layout"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/flow_layout"
                android:layout_margin="10dp"
                android:background="@drawable/white_normal_red_pressed"
                android:text="保存并观看"
                android:textColor="@color/red_normal_white_pressed"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/save"
                android:layout_margin="10dp"
                android:text="说明："
                android:textColor="@color/light_black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/statement"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/add_program_statement"
                android:textColor="@color/light_black"
                android:textSize="14sp"
                android:background="@color/transparent" />

        </RelativeLayout>


    </ScrollView>

    <include layout="@layout/loading_layout" />
</RelativeLayout>