<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:layout_height="69dp">

    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:background="@drawable/item_programhalf">

        <ImageView
            android:id="@+id/movie_pic"
            android:layout_width="112dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:layout_toRightOf="@+id/movie_pic"
            android:layout_toLeftOf="@+id/img"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/movie_count"
                    tools:text="name" />

                <TextView
                    android:id="@+id/movie_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/play_count_selector"
                    android:drawablePadding="3dp"
                    tools:text="11w" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:text="desc"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:paddingLeft="8dp"
                    android:textSize="14sp" />


            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:src="@drawable/cache_juji_focus"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>
</RelativeLayout>