<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:padding="10dp" >

    <include
        android:id="@+id/user_header_layout"
        layout="@layout/include_user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"/>
    <!--<ImageView-->
        <!--android:id="@+id/user_header_layout"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:contentDescription="@string/app_name"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/list_star_default" />-->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/user_header_layout"
        android:textColor="#383838"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/privatemsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/friend_msg_btn" />

    <ImageView
        android:id="@+id/guanzhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/privatemsg"
        android:contentDescription="@string/app_name"
        android:src="@drawable/delete_guanzhu" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:paddingTop="5dp"
        android:layout_toRightOf="@id/user_header_layout"
        android:textColor="#7c7c7c"
        android:textSize="14sp" />

</RelativeLayout>