<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="6dp" >

    <TextView
        android:id="@+id/tv_source_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/pd_text_divider_df"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="@string/play_source"
        android:textColor="@color/light_black"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/llayout_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/tv_source_tip"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgv_source"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/play_source_default" />

        <ImageView
            android:id="@+id/iv_down"
            android:layout_width="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/source_down" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_cache"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_cache_bg"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="@string/offline_cache"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>