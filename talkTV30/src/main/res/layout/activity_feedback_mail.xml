<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/privatem_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/rlayout_send"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:paddingBottom="10dp" />

    <RelativeLayout
        android:id="@+id/rlayout_send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_transparent_gray"
        android:paddingBottom="6dp"
        android:paddingTop="6dp" >
        <RelativeLayout
            android:id="@+id/feed_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择问题类型"/>
            <TextView
                android:id="@+id/feed_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/rcmd_title_tip"
                android:drawablePadding="5dp"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/privatem_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_send"
            android:layout_below="@+id/feed_type"
            android:background="@drawable/bg_input_msg"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:maxLength="140"
            android:maxLines="3"
            android:padding="6dp"
            android:hint="请详细描述，帮您更快解决"
            android:singleLine="false" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_below="@+id/feed_type"
            android:background="@drawable/btn_search_bg"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:text="@string/send_invitesms"
            android:textColor="@color/btn_search_text"
            android:textSize="12sp" />
    </RelativeLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/loading_layout"
        android:visibility="gone" />

</RelativeLayout>