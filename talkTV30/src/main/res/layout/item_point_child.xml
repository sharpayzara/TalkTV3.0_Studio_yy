<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/child_top"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/userinfo_color_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/child_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:text="用户登录"
            android:textColor="@color/point_child_left"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/child_middle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="right"
            android:text="+50积分"
            android:textColor="@color/point_child_middle"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/child_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="right"
            android:text="未完成"
            android:textColor="@color/point_child_right"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/child_right_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="right" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/menu_arrow"
                android:text="进入"
                android:textColor="@color/point_child_right"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@id/child_top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/divide_line"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

</RelativeLayout>