<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_all"
    android:paddingRight="@dimen/padding_all" >

    <com.sumavision.talktv2.components.FilterImageView
        android:id="@+id/img_shop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="2.5dip"
        android:layout_weight="1"
        android:contentDescription="@string/app_name"
        android:src="@drawable/found_shop_bg" />

    <com.sumavision.talktv2.components.FilterImageView
        android:id="@+id/img_badge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2.5dip"
        android:layout_weight="1"
        android:contentDescription="@string/app_name"
        android:src="@drawable/found_badge_bg" />

</LinearLayout>