<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default"
    android:fitsSystemWindows="true" >

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:scrollbars="none"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rlayout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/light_black"
                    android:text="123123123"
                    android:textSize="14sp" />

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    layout="@layout/include_max_focus_layout" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/concert_intro_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlayout_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/iv_desc_tip1"
                        android:layout_width="8dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="6dp"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:src="@color/navigator_bg_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/iv_desc_tip1"
                        android:gravity="center_vertical"
                        android:text="@string/concert_tag_intro"
                        android:textColor="@color/light_black" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/concert_intro_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlayout_desc"
                    android:orientation="vertical" />

                    
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" >

                <RelativeLayout
                    android:id="@+id/rlayout_desc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/iv_desc_tip2"
                        android:layout_width="8dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="6dp"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:src="@color/navigator_bg_color" />

                    <TextView
                        android:id="@+id/iv_desc_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/iv_desc_tip2"
                        android:gravity="center_vertical"
                        android:text="@string/concert_tag_buy"
                        android:textColor="@color/light_black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/concert_buy_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlayout_desc2"
                    android:gravity="center_vertical"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/concert_buy_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格：￥ 30"
                        android:layout_centerVertical="true"
                        android:textColor="@color/navigator_bg_color"
                        android:contentDescription="@string/app_name" />

                    <Button
                        android:id="@+id/concert_buy_btn"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_exchange_bg"
                        android:textColor="@color/btn_exchange"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:text="@string/concert_buy"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlayout_desc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/concert_buy_item"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/iv_desc_tip3"
                        android:layout_width="8dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="6dp"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:src="@color/navigator_bg_color" />

                    <TextView
                        android:id="@+id/iv_desc_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/iv_desc_tip3"
                        android:gravity="center_vertical"
                        android:text="@string/concert_tag_time"
                        android:textColor="@color/light_black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/concert_time_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlayout_desc3"
                    android:gravity="center_vertical"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/concert_time_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name" />

                    <Button
                        android:id="@+id/concert_time_play"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/concert_play"
                        android:background="@drawable/concert_disable_bkg"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlayout_desc4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/concert_time_item"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/iv_desc_tip4"
                        android:layout_width="8dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="6dp"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:src="@color/navigator_bg_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/iv_desc_tip4"
                        android:gravity="center_vertical"
                        android:text="@string/exchange_rule"
                        android:textColor="@color/light_black" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlayout_desc2"
                    android:gravity="center_vertical"
                    android:padding="20dp" >

                    <TextView
                        android:id="@+id/concert_rule_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/loading_layout"/>

</RelativeLayout>