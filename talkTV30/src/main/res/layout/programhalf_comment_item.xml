<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
		<include
			android:id="@+id/user_header_layout"
			layout="@layout/include_user_icon"
			android:layout_width="50dp"
			android:layout_height="50dp"/>
	    <!--<ImageView -->
	        <!--android:id="@+id/user_header_layout"-->
	        <!--android:layout_width="50dp"-->
	        <!--android:layout_height="50dp"-->
	        <!--android:src="@drawable/list_headuser_header_layout_default"/>-->
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_toRightOf="@id/user_header_layout"
	        android:layout_marginLeft="10dp"
	        android:layout_centerVertical="true">
	        <TextView 
	            android:id="@+id/username"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="用户名"
	            android:textSize="14sp"
				android:maxLength="20"
				android:maxEms="10"
				android:ellipsize="end"
	            android:textColor="@color/light_black"/>
	        <TextView 
	            android:id="@+id/time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="发表时间"
	            android:textSize="12sp"
	            android:textColor="@color/light_gray"/>
	    </LinearLayout>
	    
	    <Button 
	        android:id="@+id/forward"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:text="转发"
	        android:textSize="14sp"
	        android:layout_centerVertical="true"
	        android:background="@drawable/button_normal_bg"
	        android:textColor="@color/light_black"/>
	    
	    <Button 
	        android:id="@+id/reply"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/forward"
	        android:text="回复"
	        android:layout_centerVertical="true"
	        android:background="@drawable/button_normal_bg"
	        android:textSize="14sp"
	        android:textColor="@color/light_black"/>
	    
	    <TextView 
	        android:id="@+id/reply_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/reply"
	        android:text="123"
	        android:layout_centerVertical="true"
	        android:textSize="14sp"
	        android:textColor="@color/light_black"/>
	</RelativeLayout>
	
    <TextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="回复内容"
        android:textColor="@color/light_black"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:textSize="14sp" />
    
    <TextView 
        android:id="@+id/forward_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textColor="@color/light_black"
        android:background="#f2f2f2"
        android:lineSpacingMultiplier="1.2"
        android:textSize="14sp">
    </TextView>
    
    <LinearLayout 
        android:id="@+id/reply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="#e9e9e9">
	    <TextView 
	        android:id="@+id/reply_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:layout_marginLeft="60dp"
	        android:lineSpacingMultiplier="1.2"
	        android:textColor="@color/light_black"
	        android:textSize="14sp"/>
        <Button 
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:text="更多"
            android:textSize="12dp"
            android:textColor="@color/light_black"
            android:background="@drawable/button_normal_bg"/>
    </LinearLayout>

</LinearLayout>