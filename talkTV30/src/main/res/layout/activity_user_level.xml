<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:padding="10dp">
        <!--<com.sumavision.talktv2.components.RoundImageView-->
            <!--android:id="@+id/level_icon"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_width="64dp"-->
            <!--android:layout_height="64dp" />-->
        <include
            android:id="@+id/user_header_layout"
            android:layout_centerHorizontal="true"
            android:layout_width="64dp"
            android:layout_height="64dp"
            layout="@layout/include_user_icon_round"/>
        <TextView
            android:id="@+id/level_text"
            android:layout_below="@+id/user_header_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/level_seek"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_text"
            android:focusable="false"
            android:maxHeight="4.0dp"
            android:minHeight="4.0dp"
            android:layout_marginTop="8dp"
            android:progressDrawable="@drawable/po_seekbar"
            android:thumb="@null" />
        <TextView
            android:id="@+id/level_cur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_seek"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="lv3"/>
        <TextView
            android:id="@+id/level_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_seek"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:text="lv4"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/ul_intor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="等级介绍"/>
        <View
            android:id="@+id/ul_intro1_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ul_intor1"
            android:background="@color/m_date_color"/>
        <TextView
            android:id="@+id/ul_intor1_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:text="LV1 abc "
            android:lineSpacingMultiplier="1.3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/ul_intro1_line"/>
        <TextView
            android:id="@+id/ul_intor1_text2"
            android:layout_width="wrap_content"
            android:layout_below="@+id/ul_intro1_line"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="100经验"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/ul_intro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="等级有何意义？"/>
        <View
            android:id="@+id/ul_intro2_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ul_intro2"
            android:background="@color/m_date_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ul_intro2_line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/level_means"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/ul_intro3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:text="如何获取经验？"/>
        <View
            android:id="@+id/ul_intro3_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ul_intro3"
            android:background="@color/m_date_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ul_intro3_line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/level_up"/>
    </RelativeLayout>

</LinearLayout>
</ScrollView>