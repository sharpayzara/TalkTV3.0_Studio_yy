<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/my_comment_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/headpic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/pd_comment_head" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/headpic" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/app_name"
                android:textColor="#383838" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/app_name"
                android:textColor="@color/base_color_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/time"
                android:text="@string/comment_from"
                android:textColor="@color/base_color_gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headpic"
            android:layout_marginTop="16dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:textColor="#7c7c7c" />

            <ImageView
                android:id="@+id/pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:contentDescription="@string/app_name"
                android:minHeight="53dp"
                android:minWidth="80dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/cd_audio_layout"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="5dp"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/cd_audio_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/pc_switch2audio_big_normal"
                    android:visibility="visible" />

                <ProgressBar
                    android:id="@+id/cd_audio_progressBar"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/root_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/root_talk_bg"
                android:padding="10dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/root_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7c7c7c" />

                <ImageView
                    android:id="@+id/root_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/root_content"
                    android:contentDescription="@string/app_name"
                    android:minHeight="53dp"
                    android:minWidth="80dp"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:id="@+id/root_audio_layout"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="5dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/root_audio_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/pc_switch2audio_big_normal"
                        android:visibility="visible" />

                    <ProgressBar
                        android:id="@+id/root_audio_progressBar"
                        style="@style/base_large_progressbar_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viewpager_btn"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/my_comment_layout"
        android:background="@color/white"
        android:baselineAligned="false" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/reply_btn"
                style="@style/pd_tag_text_style"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ab_indicator"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/comment_reply" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/forward_btn"
                style="@style/pd_tag_text_style"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ab_indicator"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/comment_zhuanfa" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/llayout_reply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_reply_bg" >

            <TextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/comment_reply"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:text="@string/reply_comment"
                android:textColor="@color/base_color_balck"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llayout_forward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/btn_reply_bg" >

            <TextView
                android:id="@+id/forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/comment_forward"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:text="@string/forward_comment"
                android:textColor="@color/base_color_balck"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/btn_layout"
        android:layout_below="@id/viewpager_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/bigpic"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#c1000000"
        android:contentDescription="@string/app_name"
        android:src="@drawable/recommend_pic_default"
        android:visibility="gone" />

    <include
        layout="@layout/loading_layout"
        android:visibility="gone" />

</RelativeLayout>