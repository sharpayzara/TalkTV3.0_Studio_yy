<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <stroke android:width="1dp" android:color="@color/navigator_bg_color" />

            <corners android:radius="5dp" />

            <padding android:bottom="2dp" android:left="15dp" android:right="15dp" android:top="2dp" />

            <solid android:color="@color/navigator_bg_color" />
        </shape></item>
    <item><shape>
            <stroke android:width="1dp" android:color="@color/navigator_bg_color" />

            <corners android:radius="5dp" />

            <solid android:color="@color/transparent" />

            <padding android:bottom="2dp" android:left="15dp" android:right="15dp" android:top="2dp" />
        </shape></item>

</selector>