<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme_Light" parent="@style/actionBarTheme">
        <item name="android:colorBackground">@color/activity_bg_color</item>
        <item name="android:windowBackground">@color/activity_bg_color</item>
        <item name="android:windowAnimationStyle">@style/base_activity_animation</item>
    </style>
    <style name="AppTheme_Light.NoActionBar" parent="@style/AppTheme_Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="actionBarTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.ActionBar</item>
        <item name="actionBarSize">48dp</item>
        <item name="actionBarTabBarStyle">@style/Widget.ActionBar.TabBar</item>
        <item name="actionBarTabTextStyle">@style/Widget.ActionBar.TabText</item>
        <item name="actionBarTabStyle">@style/Widget.ActionBar.TabView</item>
        <item name="actionDropDownStyle">@style/Widget.ActionBar.Spinner.DropDown</item>
        <item name="homeAsUpIndicator">@drawable/actionbar_holo_light</item>
    </style>

    <style name="Widget.ActionBar" parent="Widget.Sherlock.ActionBar.Solid">
        <item name="background">@drawable/navigator_bg</item>
        <item name="backgroundStacked">@color/white</item>
        <item name="titleTextStyle">@style/Widget.ActionBar.Title</item>
    </style>

    <style name="Widget.ActionBar.Title" parent="@android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <style name="Widget.ActionBar.TabBar" parent="Widget.Sherlock.ActionBar.TabBar">
        <item name="android:divider">@drawable/action_bar_divider</item>
    </style>

    <style name="Widget.ActionBar.TabText" parent="Widget.Sherlock.ActionBar.TabText">
        <item name="android:textColor">@color/color_actionbar_tabtext</item>
        <item name="android:textSize">@dimen/tab_text</item>
    </style>

    <style name="Widget.ActionBar.TabView" parent="Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/abs__tab_indicator_ab_holo</item>
        <item name="android:minHeight">20dip</item>
    </style>

    <style name="Widget.ActionBar.Spinner.DropDown" parent="Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/abs__tab_indicator_ab_holo</item>
    </style>

    <style name="Widget.ActionBar.DropDown" parent="Widget.Sherlock.Spinner.DropDown.ActionBar"></style>

</resources>