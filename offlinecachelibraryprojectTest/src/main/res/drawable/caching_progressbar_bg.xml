<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
  <!--  背景  -->  
    <item android:id="@android:id/background">  
        <shape>  
            <corners android:radius="5dip" /> 
        <gradient  
                    android:startColor="#B5B5B6"  
                    android:centerColor="#B5B5B6"  
                    android:centerY="0.75"  
                    android:endColor="#B5B5B6"  
                    android:angle="270"  
            />  
        </shape>  
    </item>  
    <!--  第二进度条  -->  
    <item android:id="@android:id/secondaryProgress">  
        <clip>  
            <shape>  
                <corners android:radius="5dip" />  
                <gradient  
                        android:startColor="#8000cdcd"  
                        android:centerColor="#8000bfff"  
                        android:centerY="0.75"  
                        android:endColor="#a000b2ee"  
                        android:angle="270"  
                />  
            </shape>  
        </clip>  
    </item>  
    <!--  第一进度条  -->  
    <item android:id="@android:id/progress">  
        <clip>  
            <shape>  
                <corners android:radius="5dip" />  
                <gradient  
                        android:startColor="#ff167efc"  
                        android:centerColor="#ff167efc"  
                        android:centerY="0.75"  
                        android:endColor="#ff167efc"  
                        android:angle="270"  
                />  
            </shape>  
        </clip>  
    </item>  
</layer-list>
